html.cloud {
  font-size: calc(100vw / 1366);

  div,
  span {
    position: relative;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    border: 0;
    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: none;
  }

  body {
    background-color: #ffffff;
    overflow: hidden;
    width: 100%;
    height: 100%;
    margin: 0;
    font-size: 80vh;
  }
}

@media (min-aspect-ratio: 1366/1024) {
  html.cloud {
    font-size: calc(100vh / 1024);
  }
}
